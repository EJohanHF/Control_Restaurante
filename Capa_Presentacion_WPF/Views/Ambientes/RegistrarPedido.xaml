                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!--<DataGridTextColumn Header="Descripcion" Binding="{Binding DP_DESCRIP}" FontSize="15" Width="auto"/>-->

                    <DataGridTemplateColumn Header="Descripcion" MaxWidth="270" >
