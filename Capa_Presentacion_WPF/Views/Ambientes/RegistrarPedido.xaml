                    <TextBlock.InputBindings>
                        <MouseBinding Command="{Binding DescPedido}" MouseAction="LeftClick" />
                    </TextBlock.InputBindings>
                </TextBlock>
            </Grid>
        </Grid>
        <Grid Grid.Column="3" HorizontalAlignment="Center" Grid.Row="1">
