                <Label Grid.Column="1" FontSize="20" Foreground="Black" HorizontalAlignment="Left" Content="{Binding Fecha_Registro}"></Label>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="20,0,0,5" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="2" Grid.ColumnSpan="2">
