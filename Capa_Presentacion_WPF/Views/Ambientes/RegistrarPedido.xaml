                                               HorizontalAlignment="Stretch" TextWrapping="Wrap" 
                                               Width="150" VerticalAlignment="Stretch" FontSize="13"
                                               Text="{Binding nomplato}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
