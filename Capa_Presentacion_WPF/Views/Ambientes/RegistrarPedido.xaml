                            <Label FontSize="20" HorizontalAlignment="Left" Foreground="Red" Content="Cliente : " Visibility="{Binding ClienteDelivery}">
                                <Label.InputBindings>
                                    <MouseBinding Command="{Binding DialogNomPers}" MouseAction="LeftClick" />
                                </Label.InputBindings>
                            </Label>
                        </StackPanel>

                        <TextBlock HorizontalAlignment="Left" Margin="0,5,5,0" TextWrapping="Wrap" FontSize="22" Foreground="Black" Text="{Binding NomCliente}" Visibility="{Binding ClienteDelivery}"/>
                        <Label FontSize="20" HorizontalAlignment="Left" Foreground="Red" Content="Telefono : " Visibility="{Binding ClienteDelivery}">
                            <Label.InputBindings>
                                <MouseBinding Command="{Binding DialogTelPers}" MouseAction="LeftClick" />
                            </Label.InputBindings>
                        </Label>
                        <TextBlock HorizontalAlignment="Left" Margin="0,5,5,0" TextWrapping="Wrap" FontSize="22" Foreground="Black" Text="{Binding TelCliente}" Visibility="{Binding ClienteDelivery}"/>
                    </StackPanel>
                    
                </StackPanel>
            </StackPanel>
        </StackPanel>
