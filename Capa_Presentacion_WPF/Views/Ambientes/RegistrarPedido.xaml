                        </Grid>
                    </StackPanel>
                </Button>
                <Button Height="40" IsEnabled="{Binding HabilitarPedir}" Grid.Column="0" Width="auto" Grid.Row="1" Command="{Binding GuardarPedido}" VerticalAlignment="Bottom" Margin="2,0,5,5">
