                            <TextBlock Grid.Column="1" Grid.RowSpan="2" Grid.Row="0" FontSize="10">
                                <Run Text="AGREGAR "/><LineBreak/><Run Text="DESCRIPCION" FontSize="10"/></TextBlock>
                        </Grid>
                    </DockPanel>
                </Button>
                <Button Height="40" Grid.Column="0" Width="auto" Grid.Row="4" VerticalAlignment="Bottom" Command="{Binding BorrarDescrip}" Margin="2,0,5,5">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="auto">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
