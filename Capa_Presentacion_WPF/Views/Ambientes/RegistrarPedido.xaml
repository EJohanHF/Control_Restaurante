                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Source="/Resources/Images/botones/pedir.png" Stretch="UniformToFill" Height="20"/>
                            <TextBlock Margin="2,0,0,0" VerticalAlignment="Center"  Grid.Column="1" Grid.RowSpan="2" Grid.Row="0" Text="PEDIR" FontSize="13"/>
                        </Grid>
                    </StackPanel>
                </Button>
                <Button Height="40" Grid.Column="0" Width="auto" Grid.Row="2" Command="{Binding CambMesa}" VerticalAlignment="Bottom"  Margin="2,0,5,5">
