                                                            <Image Source="{Binding imagencat}" Margin="0,0,5,0" Height="150" Width="150" />
                                                        </WrapPanel>
                                                    </StackPanel>
                                                </Button.ToolTip>

                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                        </DataGrid.Columns>
