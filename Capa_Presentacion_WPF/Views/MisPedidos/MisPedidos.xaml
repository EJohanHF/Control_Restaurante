                                                        <ControlTemplate TargetType="Button">
                                                            <Border CornerRadius="20" Background="White" BorderBrush="Black" BorderThickness="0.1">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                    
                                                                </ContentPresenter>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
