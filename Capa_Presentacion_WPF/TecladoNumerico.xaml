             xmlns:local="clr-namespace:Capa_Presentacion_WPF"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Width="180.488" Height="231.707" Loaded="UserControl_Loaded">
    <Grid Name="teclado_numerico">
        <Button x:Name="button" Content="7" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="50" Height="50" Background="#FFD1D1D1" Foreground="#FF4D4C4C" BorderBrush="#FF878787" Click="Button_Click"/>
