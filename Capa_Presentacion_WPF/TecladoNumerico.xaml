        <Button x:Name="button_Copy6" Content="4" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Width="50" Height="50"  Background="#FFD1D1D1" Foreground="#FF4D4C4C" BorderBrush="#FF878787" Click="Button_Click"/>
        <Button x:Name="button_Copy7" Content="9" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="50" Height="50"  Background="#FFD1D1D1" Foreground="#FF4D4C4C" BorderBrush="#FF878787" Click="Button_Click"/>
