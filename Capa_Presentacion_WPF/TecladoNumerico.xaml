        <Button x:Name="btnPunto" Content="." HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" Width="50" Height="50" Background="#FFD1D1D1" Foreground="#FF4D4C4C" BorderBrush="#FF878787" Click="Button_Click"/>
        <Button x:Name="btnBorrar" HorizontalAlignment="Left" Margin="120,175,0,0" VerticalAlignment="Top" Width="50" Height="50" Background="#FFD1D1D1" Foreground="#FF4D4C4C" BorderBrush="#FF878787" Click="Button_Click">
            <StackPanel  Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Eraser" Height="20" Width="20"/>                
            </StackPanel>
        </Button>
            

    </Grid>
</UserControl>
